{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@app/*": ["./app/*"],
			"@public/*": ["./public/*"],
			"@components/*": ["./src/components/*"],
			"@constants/*": ["./src/constants/*"],
			"@appTypes/*": ["./src/types/*"],
			"@utils/*": ["./src/utils/*"],
			"@api/*": ["./src/api/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"src/components/FeedbackForm/api/sendFeedback"
	],
	"exclude": ["node_modules"]
}
